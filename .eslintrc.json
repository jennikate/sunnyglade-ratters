{
  "env": {
      "browser": true,
      "es2021": true,
      "node": true,
      "jest": true
  },
  "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react/jsx-runtime",
      "plugin:jsx-a11y/recommended",
      "plugin:jest/recommended"
  ],
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true
      },
      "ecmaVersion": "latest",
      "sourceType": "module"
  },
  "plugins": [
      "react",
      "jest",
      "babel"
  ],
  "rules": {
      "quotes": [ "error",  "single"],
      "semi": ["error", "always"],
      "no-console": ["warn"],
      "comma-dangle": ["error", "always-multiline"]
  },
  "overrides": [
    {
      "files": [
        "*.spec.js",
        "*.spec.jsx"
      ],
      "env": {
        "jest": true
      }
    }
  ]
}
